@page
@model Loop.MVC.Views.Login.IndexModel
@{
    ViewData["Title"] = "Loop - Sistema de Pontos";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #7b2ff7, #4e41f0);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background: #ffffff;
            width: 360px;
            padding: 35px 32px;
            border-radius: 16px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            text-align: left;
        }

        .login-card h1 {
            margin: 0;
            font-size: 28px;
            color: #111;
            font-weight: 600;
        }

        .login-card p {
            margin-top: 6px;
            font-size: 14px;
            color: #444;
        }

        label {
            display: block;
            margin-top: 18px;
            font-size: 15px;
            font-weight: 600;
            color: #222;
        }

        .input-group {
            position: relative;
            margin-top: 6px;
        }

        .input-group input {
            width: 100%;
            padding: 14px;
            font-size: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            outline: none;
        }

        .input-group input:focus {
            border-color: #4e41f0;
        }

        .input-group .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            opacity: 0.75;
        }

        .login-btn {
            width: 100%;
            margin-top: 28px;
            padding: 14px;
            border: none;
            background: #2847ff;
            color: #fff;
            font-size: 17px;
            border-radius: 10px;
            cursor: pointer;
            transition: 0.2s;
        }

        .login-btn:hover {
            background: #1e38d8;
        }

        .footer-logo {
            margin-top: 25px;
            text-align: center;
            color: #fff;
            font-size: 12px;
            opacity: 0.85;
        }
    </style>
</head>

<body>

    <div>
        <div class="login-card">
            <h1>Login</h1>
            <p>Preencha suas informações para efetuar o login:</p>

            <form asp-action="Login" asp-controller="Auth" method="post">

                <label for="email">E-mail</label>
                <div class="input-group">
                    <input type="email" id="email" name="Email" placeholder="Digite o seu e-mail" required />
                </div>

                <label for="senha">Senha</label>
                <div class="input-group">
                    <input type="password" id="senha" name="Senha" placeholder="Digite a sua senha" required />
                    <span class="toggle-password" onclick="togglePassword()">👁️</span>
                </div>

                <button type="submit" class="login-btn">Entrar</button>
            </form>
        </div>

        <div class="footer-logo">
            Secretaria de Ciência, Tecnologia e Inovação — Governo de Pernambuco
        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById("senha");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>

</body>
</html>