@model Loop.Application.DTOs.EstagiarioDTO
@{
    ViewData["Title"] = "Cadastrar Estagiário";
}

<div class="container">
    <h1>Cadastrar novo estagiário</h1>

    <form asp-action="CadastrarEstagiario" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" placeholder="Digite nome do estagiário">
        </div>

        <div class="form-group">
            <label for="email">E-mail</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Digite o e-mail do estagiário">
        </div>

        <div class="form-group">
            <label for="senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" placeholder="Digite a senha do estagiário">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

